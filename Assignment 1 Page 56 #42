// ListingDemo class implementation
public class ListingDemo
{
   // start main method
   public static void main(String[] args)
   {
       // testing the default constructor
       Listing obj1 = new Listing();
      
       // testing the input() method
       obj1.input();
      
       // testing the default constructor
       Listing obj2 = new Listing();
      
       // testing the setName() and setAge() methods
       obj2.setName("Steven Lee");
       obj2.setAge(27);      
      
       // testing the parameterized constructor
       Listing obj3 = new Listing("Jonh Smith", 45);
      
       // testing the toString method
       System.out.println("\nListing 1...");
       System.out.println(obj1);
      
       // testing the toString method
       System.out.println("\nListing 2...");
       System.out.println(obj2);      
      
       // testing the getName() and getAge() methods
       System.out.println("\nListing 3...");
       System.out.println("Name: " + obj3.getName() + ", Age: " + obj3.getAge());  
      
   } // end of main method
} // end of ListingDemo class
